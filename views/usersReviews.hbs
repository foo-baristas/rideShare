{{#if review.id}}

    <div class='row content' id="reviews">
        <h2>Reviews for {{ review.name_first}}</h2>
            <div class='col-sm-3'> </div>
            <div class='col-sm-6' id='review-text'>
                <!-- <h3> FIX THIS: {{user.name_first}} {{ user.name_last }} </h3> -->
                <hr>
                <h4> Rating: {{ review.rating }}/5</h4>
                <h4> {{ review.creation_date }} </h4>
                <p> {{ review.comment }} </p>
            </div>
    </div>

{{else}}
    <h1>{{review.name_first}} doesn't have any reviews yet.</h1>
{{/if}}
