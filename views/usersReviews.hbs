<div id="show-review-page">
    {{#if review.id}}

        <div class='row content' id="reviews">
            <h2>Reviews for <span>{{ review.name_first}}</span></h2>
            <div class='col-sm-3'> </div>
            <div class='col-sm-6' id='review-text'>
                <!-- <h3> FIX THIS: {{user.name_first}} {{ user.name_last }} </h3> -->
                <hr>
                <h4> <span>Rating:</span> {{ review.rating }}/5</h4>
                <h5> {{ review.creation_date }} </h5>
                <p> {{ review.comment }} </p>
            </div>
        </div>

    {{else}}
        <h1>{{review.name_first}} doesn't have any reviews yet.</h1>
    {{/if}}
</div>
