              </ul>
            </div>


            <!-- REVIEWS -->
            <div class='row'>

<!-- FIX: DATABASE QUERY TO INCLUDE REVIEWER DETAILS -->

              <div class='col-sm-3'> <img src='{{ user.profile_pic_url }}' style='width:100%'></div>
              <div class='col-sm-9'>
                <div class='row'> FIX THIS: {{user.name_first}} {{ user.name_last }} </div>
                <div class='row'> Rating: {{ user.rating }}/5</div>
                <div class='row'> FIX THIS: {{ user.creation_date }} </div>
