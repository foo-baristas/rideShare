                </div>
              </div>

              <!-- PREFERENCES -->
              <div class='row content' id="preferences">
                <h2>Preferences</h2>
                <ul>
                  <li>
                    <div class="entry">
                      <!-- if the condition is false -->
                      {{#if user.smoking }}
                      <img src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcSHpMOdjrWhTLqIGWzTHCbylToB_7ywe1n-hTiFHWbgOobDGxHUBg">
                      {{else}}
                      <img src="http://www.designofsignage.com/application/symbol/hands/image/600x600/hand-smoking.jpg">
                      {{/if}}
                    </div>
                  </li>

                  <li>
                    <div class="entry">
                      <!-- if the condition is false -->
                      {{#if user.eating }}
                      <img src="http://www.clipartbest.com/cliparts/LiK/kqb/LiKkqbyaT.jpeg">
                      {{else}}
                      <img src="https://image.freepik.com/free-icon/restaurant-eating-tools-set-of-three-pieces_318-61020.png">
                      {{/if}}
                    </div>
                  </li>

                  <li>
                    <div class="entry">
                      <!-- if the condition is false -->
                      {{#if user.pets }}
                      <img src="http://free-icon-download.com/modules/PDdownloads/images/screenshots/free-image-download-no-pets-allowed-sign.png">
                      {{else}}
                      <img src="https://image.freepik.com/free-icon/pet-hotel-sign-with-a-dog-and-a-cat-under-a-roof-line_318-51335.png">
                      {{/if}}
                    </div>
                  </li>

                  <li>
                    <div class="entry">
                      <!-- if the condition is false -->
                      {{#if user.music }}
                      <img src="http://previews.123rf.com/images/shadowalice/shadowalice1502/shadowalice150200216/36857840-No-music-icon-great-for-any-use-Vector-EPS10--Stock-Vector.jpg">
                      {{else}}
                      <img src="http://downloadicons.net/sites/default/files/music-icon-61648.png">
                      {{/if}}
                    </div>
                  </li>

                  <li>
                    <div class="entry">
                      <!-- if the condition is false -->
                      {{#if user.talking }}
                      <img src="https://smalltalkbigresults.files.wordpress.com/2011/03/no_talking1.gif">
                      {{else}}
                      <img src="http://martalozanomolano.com/wordpress/wp-content/uploads/2014/03/iconmonstr-speech-bubble-15-icon.png">
                      {{/if}}
                    </div>
                  </li>

                </ul>
              </div>
              <hr>

              <!-- REVIEWS -->

              {{#if reviews}}
              <div class='row content' id="reviews">

                <h2>Reviews for {{ user.name_first}}</h2>
