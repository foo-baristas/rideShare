<!-- PHOTO, NAME, AGE, DESCRIPTION -->
<div class='row content' id="profile">
    <div class='col-sm-5'> <img src='{{ user.profile_pic_url }}'></div>
    <div class='col-sm-7'>
        <div class='row'>
            <h2>{{ user.name_first}} {{ user.name_last }}</h2> </div>
        <div class='row'>
            <h3>{{ user.age }} yrs old</h3></div>
        <div class='row'>
            <p>{{ user.description }}</p>
        </div>

        <!-- USER CAN EDIT HIS/HER OWN PROFILE -->
        <!-- <p>{{editProfile}}</p> -->
        {{#if canEditProfile}}
            <a href="/user/{{ user.id }}/edit">
                <p>Edit Profile</p>
            </a>
        {{/if}}

    </div>
</div>
