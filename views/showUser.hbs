  <style>
  body {
    width: 100%;
  }
  img {
    width: 100%;
    border-radius: 50%;
  }
  h2, h3, p {
    margin-top: 10px;
  }
  h3 {
    font-size: 1.2em;
  }
  #preferences img {
    width: 15%;
  }
  .main {
    padding: 20px;
  }
  .navbar {
    position: absolute;
  }
  main {
    margin-top: 50px;
  }
  #preferences h2, #reviews h2 {
    text-align: center;
    margin-top: 0;
  }
  #review-text {
    margin-top: 15px;
  }
  ul {
    list-style-type: none;
    margin-top: 20px;
  }
  li {
    display: inline;
  }
  .entry {
    display: inline;
  }
  </style>
</head>

<body>
  <main class='row'>
    <div class='col-sm-2'></div>
    <div class='col-sm-8 main'>

      <!-- PHOTO, NAME, AGE, DESCRIPTION -->
      <div class='row content' id="profile">
        <div class='col-sm-5'> <img src='{{ user.profile_pic_url }}'></div>
        <div class='col-sm-7'>
          <div class='row'> <h2>{{ user.name_first}} {{ user.name_last }}</h2> </div>
          <div class='row'> <h3>{{ user.age }} yrs old</h3></div>
          <div class='row'> <p>{{ user.description }}</p></div>

          <!-- USER CAN EDIT HIS/HER OWN PROFILE -->
          <!-- <p>{{editProfile}}</p> -->
          {{#if canEditProfile}}
          <a href="/user/{{ user.id }}/edit"><p>Edit Profile</p></a>
          {{/if}}

        </div>
