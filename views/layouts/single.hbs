<html>
<header>
  {{>header}}
  <title>Welcome to RideShare!</title>
</header>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" id="logo" href="/">
          RIDE|<span id="logo-share">share</span>
        </a>
      </div>
      <ul class="nav navbar-nav navbar-right" id="nav-bar">
        {{#if session.user_id}}
        <li><p class="navbar-text">Welcome <a class="navbar-link" href="/user/{{session.user_id}}">{{session.user_name}}</a></p></li>
        <li><a href="/trip/newRide">Create Trip</a></li>
        <li><a href="/logout">Logout</a></li>

        {{else}}
        
        <li><a href="/login">Login</a></li>
        <li><a href="/login/facebook">Login with Facebook</a></li>
        <li><a href="/user/new">Register</a></li>
        {{/if}}
      </ul>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
        {{{ body }}}
      </div>
    </div>
  </div>
  {{>footer}}
</body>
</html>
