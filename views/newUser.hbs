<div class="col-sm-3"></div>
<div class="col-sm-6" id="new-user-page">
    <h2>Sign Up</h2>

    <form class="form-inline" method='POST' action='/user'>

        <div class="form-group row">
            <label for="name_first" class="col-sm-4 form-control-label">First Name</label>
            <div class="col-sm-8">
                <input name='name_first' type="text" class="form-control" id="first_name" placeholder="first name">
            </div>
        </div>

        <div class="form-group row">
            <label for="last_first" class="col-sm-4 form-control-label">Last Name</label>
            <div class="col-sm-8">
                <input name='name_last' type="text" class="form-control" id="last_name" placeholder="last name">
            </div>
        </div>

        <div class="form-group row">
            <label for="profile_pic_url" class="col-sm-4 form-control-label">Profile Pic</label>
            <div class="col-sm-8">
                <input name='profile_pic_url' type="url" class="form-control" id="profile_pic_url" placeholder="insert URL">
            </div>
        </div>

        <div class="form-group row">
            <label for="age" class="col-sm-4 form-control-label">Age</label>
            <div class="col-sm-8">
                <input name='age' type="text" class="form-control" id="age" placeholder="age">
            </div>
        </div>

        <div class="form-group row">
            <label for="email" class="col-sm-4 form-control-label">Email</label>
            <div class="col-sm-8">
                <input name='email' type="text" class="form-control" id="email" placeholder="email">
            </div>
        </div>

        <div class="form-group row">
            <label for="description" class="col-sm-4 form-control-label">Description</label>
            <div class="col-sm-8">
                <input name='description' type="text" class="form-control" id="description" placeholder="description">
            </div>
        </div>

        <div class="form-group row">
            <label for="username" class="col-sm-4 form-control-label">Username</label>
            <div class="col-sm-8">
                <input name='username' type="text" class="form-control" id="username" placeholder="username">
            </div>
        </div>

        <div class="form-group row">
            <label for="password" class="col-sm-4 form-control-label">Password</label>
            <div class="col-sm-8">
                <input name='password' type="password" class="form-control" id="password" placeholder="password">
            </div>
        </div>


        <!-- RADIO BUTTONS -->
        <h3>I'm cool with the following in my car:</h3>
        <label class="checkbox-inline">
            <input type="checkbox" name="smoking" value="smoking"> smoking
        </label>
        <label class="checkbox-inline">
            <input type="checkbox" name="eating" value="eating"> eating
        </label>
        <label class="checkbox-inline">
            <input type="checkbox" name="music" value="music"> music
        </label>
        <label class="checkbox-inline">
            <input type="checkbox" name="talking" value="talking"> talking
        </label>
        <label class="checkbox-inline">
            <input type="checkbox" name="pets" value="pets"> pets
            <br>
        </label>
        <br>
        <button class="btn btn-success" type="submit">Sign Up</button>
</div>
</form>

</div>
