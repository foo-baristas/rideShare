<div id="newUser">
    <div class="row">
        <div class="col-md-6">
            <h2>Create an account</h2>
            <small class="text-muted">and start searching for your ride in a jiffy</small>
        </div>
    </div>
    <form class="form-inline" method='POST' action='/user'>
      <div class="wrapper">
        <div class="form-group row">
            <div class="col-md-6">
                <label for="name_first">First Name</label>
                <!-- <div class="col-sm-8"> -->
                <input name='name_first' type="text" class="form-control" id="first_name" placeholder="first name" value="{{user.name_first}}">
                <!-- </div> -->
            </div>
        </div>
        </br>

        <div class="form-group row">
            <div class="col-md-6">
                <label for="last_first">Last Name</label>
                <!-- <div class="col-sm-8"> -->
                <input name='name_last' type="text" class="form-control" id="last_name" placeholder="last name" value="{{user.name_last}}">
                <!-- </div> -->
            </div>
        </div>
        </br>

        <div class="form-group row">
            <div class="col-md-6">
                <label for="profile_pic_url">Profile Pic</label>
                <!-- <div class="col-sm-8"> -->
                <input name='profile_pic_url' type="url" class="form-control" id="profile_pic_url" placeholder="insert URL" value="{{user.profile_pic_url}}">
            </div>
        </div>
        </br>

        <div class="form-group row">
            <div class="col-md-6">
                <label for="age">Age</label>
                <!-- <div class="col-sm-8"> -->
                <input name='age' type="text" class="form-control" id="age" placeholder="age" value="{{user.age}}">
            </div>
        </div>
        </br>

        <div class="form-group row">
            <div class="col-md-6">
                <label for="email">Email</label>
                <!-- <div class="col-sm-8"> -->
                <input name='email' type="text" class="form-control" id="email" placeholder="email" value="{{user.email}}">
            </div>
        </div>
        </br>

        <div class="form-group row">
            <div class="col-md-6">
                <label for="description">Description</label>
                <!-- <div class="col-sm-8"> -->
                <input name='description' type="text" class="form-control" id="description" placeholder="description" value="{{user.description}}">
            </div>
        </div>
        </br>

        <div class="form-group row">
            <div class="col-md-6">
                <label for="username">Username</label>
                <!-- <div class="col-sm-8"> -->
                <input name='username' type="text" class="form-control" id="username" placeholder="username" value="{{user.username}}">
            </div>
        </div>
        </br>

        <div class="form-group row">
            <div class="col-md-6">
                <label for="password">Password</label>
                <!-- <div class="col-sm-8"> -->
                <input name='password' type="password" class="form-control" id="password" placeholder="password">
            </div>
        </div>
        </br>


        {{#if user.password_error}}
            <div class="row">
                <small class="text-muted"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>passwords don't match</small>
            </div>
        {{/if}}

        <div class="form-group row">
            <div class="col-md-6">
                <label for="password_confirm">Type in your password again</label>
                <!-- <div class="col-sm-8"> -->
                <input name="password_confirm" type="password" class="form-control" id="password_confirm" placeholder="password">
            </div>
        </div>
        </br>
        </div>

        <div class="row" id="is_driver">
            <div class="col-md-12">
                <label for="is_driver">I'm offering rides as a driver</label>
                <input type="checkbox" name="is_driver">
            </div>
        </div>
        </br>
        <!-- RADIO BUTTONS -->
        <div class="checkboxes">
            <h4>I'm cool with the following in my car:</h4>
            <label class="checkbox-inline">
                <input type="checkbox" name="smoking"> smoking
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" name="eating"> eating
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" name="music"> music
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" name="talking"> talking
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" name="pets"> pets
                <br>
            </label>
        </div>
        </br>

        <!-- <br> -->
        <button class="btn btn-success" type="submit">Sign Up</button>

    </form>
</div>
