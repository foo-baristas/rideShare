<script>
function anyClicked() {

  if (document.getElementById('any').checked) {
    document.getElementById('smoking').checked = false;
    document.getElementById('eating').checked = false;
    document.getElementById('music').checked = false;
    document.getElementById('pets').checked = false;
    document.getElementById('talking').checked = false;
  }
}

function othersClicked() {

  document.getElementById('any').checked = false;
}
</script>
<form method="get" action="/trip/search">
  <label name="origin"> Origin:
    <input type="text" name="origin" id="origin">
  </label>
  <label name="destination"> Destination:
    <input type="text" name="destination" id="destination">
  </label>
  <label name="date"> Date:
    <input type="date" name="date" id="date">
  </label>
  <br />
  <label name="seats"> Number of Seats:
    <input type="number" name="seats" id="seats" value="1">
  </label>
  <label name="maxprice"> Max Price:
    $<input type="number" name="maxprice" id="maxprice" value="15">
  </label>
  <h3>Preferences</h3>
  <label name="any"> Any:
    <input type="checkbox" checked="true" name="any" id="any" value="any" onchange="anyClicked();">
  </label>
  &nbsp;||&nbsp;
  <label name="smoking"> Smoking:
    <input type="checkbox" name="smoking" id="smoking" value="smoking" onchange="othersClicked();">
  </label>
  &nbsp;
  <label name="eating"> Eating:
    <input type="checkbox" name="eating" id="eating" value="eating" onchange="othersClicked();">
  </label>
  &nbsp;
  <label name="music"> Music:
    <input type="checkbox" name="music" id="music" value="music" onchange="othersClicked();">
  </label>
  &nbsp;
  <label name="talking"> Talking:
    <input type="checkbox" name="talking" id="talking" value="talking" onchange="othersClicked();">
  </label>
  &nbsp;
  <label name="pets"> Pets:
    <input type="checkbox" name="pets" id="pets" value="pets" onchange="othersClicked();">
  </label>
  <br />
  <button type="submit" class="btn btn-primary">Search</button>
</form>
